

<div class="container" style="background-image: url('<%= asset_path('grass.jpg') %>');">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="form-login">
        <h2>Se connecter</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-login">
            <%= f.input :email, required: false, autofocus: true, placeholder: "" %>
            <%= f.input :password, required: false, placeholder: "" %>
            <%= f.input :remember_me, label: "Se souvenir du mot de passe ?",  as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Valider", class: "myformButton" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>  
