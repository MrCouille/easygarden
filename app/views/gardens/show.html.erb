
<%= render "shared/navbar" %>
<%= render "shared/gardencard", :locals => { :garden => @garden } %>

<div class="container">
  <h3 class="text-center mt-2"><strong>Mon plan d'implantation</strong></h3>
  <div class="plan">
    <% @garden.compartments.each_with_index do |comp, c| %>
      <div class="compartment">
        <%# <p><%= c + 1 %>
          <% comp.implantations.each do |imp| %>
            <% if imp.quantity > 0 %>
              <%= link_to vegetable_path(imp.vegetable.id) do %>
                <div class="implantation">
                  <span><%= imp.quantity %> </span>
                </div>
              <% end %>
            <% end %>
          <% end %>
      </div>
    <% end %>
  </div>
  <h3 class="text-center mt-2"><strong>Ma liste de semences</strong></h3>
</div>

<%= render "shared/navbar" %>
