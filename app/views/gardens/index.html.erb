<div class="container">
  <div class="row">
    <div class="col col-xs-12 col-sm-4 col-sm-offset-4">
      <h1 class="text-center mt-4"><strong>Mes jardins</strong></h1>
      <p class="text-center mt-4"><%= current_user.email %></p>

      <div class="row px-3">
        <% if @gardens.empty? %>
          <p class="text-center mt-6"></p>
          <p class="text-center mt-6">Vous n'avez pas de jardin pour le moment.</p>
          <p class="text-center mt-6"></p>
        <% else %>
          <% @gardens.each do |garden| %>
            <div class="garden-item border border-success p-3 mb-3">
              <h3 class="mb-0"><strong><%= link_to garden.name, garden_path(garden.id), class: "linksstyle" %></strong></h3>
              <p class="mb-2"><%= garden.address %></p>
              <%= button_to garden_path(garden.id), method: :delete, data: { confirm: "Confirme ton choix" } do %>
              <%= image_tag('picto_delete.svg', style: 'height:100%; width:24px;') %>
          <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
