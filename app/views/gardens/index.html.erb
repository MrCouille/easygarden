<div class="container">
  <h1>My Gardens</h1>

  <% @gardens.each do |garden| %>
  <ul>
    <li>
      <%= link_to "#{garden.name}", garden_path(garden.id) %>
      <%= button_to "Delete", garden_path(garden.id), method: :delete, data: { confirm: "Are you sure?" } %>
    </li>
  </ul>
  <% end %>

    <%=link_to "Create new garden", new_garden_path, class: "btn btn-success"%>

    <%=link_to "Log Out", destroy_user_session_path, class: "btn btn-primary", data: {turbo_method: :delete}%>
</div>
